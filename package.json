{
	"name": "loto-online",
	"private": true,
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "vite dev",
		"//comment": "Build SvelteKit -> Build Server TS (exclude handler vì nó đã được build bởi SvelteKit)",
		"build": "vite build && esbuild server.ts --bundle --platform=node --format=esm --target=node20 --external:./build/handler.js --outfile=server.js",
		"preview": "vite preview",
		"start": "node server.js",
		"prepare": "svelte-kit sync || echo ''",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write ."
	},
	"devDependencies": {
		"@eslint/compat": "^2.0.1",
		"@eslint/js": "^9.39.2",
		"@sveltejs/adapter-node": "^5.5.2",
		"@sveltejs/kit": "^2.50.1",
		"@sveltejs/vite-plugin-svelte": "^6.2.4",
		"@tailwindcss/forms": "^0.5.11",
		"@tailwindcss/typography": "^0.5.19",
		"@tailwindcss/vite": "^4.1.18",
		"@types/express": "^5.0.6",
		"@types/node": "^22.19.9",
		"@types/socket.io": "^3.0.1",
		"esbuild": "^0.27.3",
		"eslint": "^9.39.2",
		"eslint-config-prettier": "^10.1.8",
		"eslint-plugin-svelte": "^3.14.0",
		"globals": "^17.1.0",
		"prettier": "^3.8.1",
		"prettier-plugin-svelte": "^3.4.1",
		"prettier-plugin-tailwindcss": "^0.7.2",
		"svelte": "^5.48.2",
		"svelte-check": "^4.3.5",
		"tailwindcss": "^4.1.18",
		"typescript": "^5.9.3",
		"typescript-eslint": "^8.53.1",
		"vite": "^7.3.1"
	},
	"dependencies": {
		"@types/canvas-confetti": "^1.9.0",
		"canvas-confetti": "^1.9.4",
		"express": "^5.2.1",
		"socket.io": "^4.8.3",
		"socket.io-client": "^4.8.3"
	}
}
